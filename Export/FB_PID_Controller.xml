          <NetworkSource><StructuredText xmlns="http://www.siemens.com/automation/Openness/SW/NetworkSource/StructuredText/v3">
// PID Controller Implementation
IF #Enable THEN
    // Calculate error
    #Error := #Setpoint - #ProcessValue;
    
    // Proportional term
    #PropTerm := #Kp * #Error;
    
    // Integral term
    #IntegralSum := #IntegralSum + #Error;
    #IntTerm := #Ki * #IntegralSum;
    
    // Derivative term
    IF #Initialized THEN
        #DiffTerm := #Kd * (#Error - #LastError);
    ELSE
        #DiffTerm := 0.0;
        #Initialized := TRUE;
    END_IF;
    
    // Calculate control output
    #ControlOutput := #PropTerm + #IntTerm + #DiffTerm;
    
    // Anti-windup
    IF #ControlOutput &gt; 100.0 THEN
        #ControlOutput := 100.0;
        #IntegralSum := #IntegralSum - #Error;
    ELSIF #ControlOutput &lt; 0.0 THEN
        #ControlOutput := 0.0;
        #IntegralSum := #IntegralSum - #Error;
    END_IF;
    
    // Save error for next cycle
    #LastError := #Error;
ELSE
    // Reset controller
    #ControlOutput := 0.0;
    #IntegralSum := 0.0;
    #LastError := 0.0;
    #Initialized := FALSE;
END_IF;
</StructuredText></NetworkSource>
