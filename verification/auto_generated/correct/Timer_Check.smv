MODULE main

VAR
  500MS : boolean;
  Output : boolean;
  Start : boolean;
  Timer : boolean;

ASSIGN
  init(500MS) := FALSE;
  init(Output) := FALSE;
  init(Start) := FALSE;
  init(Timer) := FALSE;

  next(IN) := case
    TRUE : Start, PT := T500MS);
    TRUE : IN;
  esac;

  next(Output) := case
    TRUE : Timer.Q;
    TRUE : Output;
  esac;


